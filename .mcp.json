{
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "/Users/husam/workspace/tools/shard-markdown"
      ],
      "env": {}
    },
    "chroma": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/chroma-core/chroma-mcp.git",
        "chroma-mcp",
        "--client-type",
        "http",
        "--port",
        "8000",
        "--host",
        "192.168.64.3",
        "--ssl",
        "false"
      ],
      "env": {
        "ANONYMIZED_TELEMETRY": "FALSE"
      }
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    }
  }
}